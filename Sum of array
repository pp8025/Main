#include <stdio.h>
#include <conio.h>

void main() {
    int a[10], sum = 0, i, n;
    
    clrscr();
    
    printf("Enter limit: ");
    scanf("%d", &n);
    
    printf("Enter %d elements:\n", n);
    for(i = 0; i < n; i++) {
        scanf("%d", &a[i]);
    }
    
    printf("Array elements are:\n");
    for(i = 0; i < n; i++) {
        printf("%d\t", a[i]);
        sum = sum + a[i];
    }
    
    printf("\nSum of array elements are: %d", sum);
    
    getch();
}
